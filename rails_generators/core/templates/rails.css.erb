.field_with_errors 
  :background       url(../images/field_error_icon.gif) no-repeat 0 0
  :padding          0 0 0 24px

.field_error_message 
  :color            #ef3030

#errorExplanation 


#errorExplanation h2 
  :padding          20px 8px 0px 80px
  :margin           0 0 17px 0
  :font-size        12pt
  :color            #fff
  :background       #ef3030 url(../images/warning_icon.png) no-repeat 20px 8px
