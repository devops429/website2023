!!! XML
!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html'}/
    %title
    = stylesheet_link_tag('reset', 'theme', 'forms' 'rails', :cache => true)
    = javascript_include_tag(:all, :cache => true)

  %body{:id => controller.controller_name, :class => controller.action_name}

    %div{:id => 'wrapper', :class => 'wrap'}

      %div{:id => 'header'}
        = render(:partial => "/layouts/<%=file_name%>/header")

      %div{:id => 'main_menu'}
        = render(:partial => '/layouts/<%=file_name%>/main_menu')

      - unless flash.empty?
        %div{:id => 'messages'}
          - flash.each do |key, msg|
            = content_tag(:div, format_flash_message(msg), :class => "message #{key}")

      %div{:id => 'content'}
        = yield

    %div{:id => 'footer'}
      = render(:partial => '/layouts/<%=file_name%>/footer')